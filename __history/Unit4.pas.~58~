{$R *.fmx}




procedure TForm4.Timer1Timer(Sender: TObject);
begin
   Timer1.Enabled := true;
   Timer1.Interval := 2000;
   TabControl1.Next(TTabTransition.None,
   TTabTransitionDirection.Normal);
   if (TabControl1.TabIndex = 3 ) then
      begin
        TabControl1.TabIndex := 0;
      end;
end;

end.
